            <items>
              <MenuItem fx:id="about_menuItem" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
         <items>
            <VBox minHeight="500" minWidth="300" prefHeight="500.0" prefWidth="200.0">
